{
  "manifest_version": 3,
  "name": "Twitter-Copilot",
  "version": "1.0.5",
  "description": "A Smarter Way to Watch YouTube.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["activeTab", "storage", "notifications"],
  "host_permissions": ["https://x.com//*", "https://*.x.com/*"],
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://*.x.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
